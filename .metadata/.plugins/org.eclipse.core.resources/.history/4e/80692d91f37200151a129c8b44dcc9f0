//Layout

var pWidth = Ti.Platform.displayCaps.platformWidth;
var pHeight = Ti.Platform.displayCaps.platformWidth;
var itemCount = 30;
var rowCount = 4;
var margin = 10;
var trueCanvasWidth = (pWidth - margin) * rowCount +1; //Width of the device minus all of the space
var size = trueCanvasWidth;

//Second Window

var secWin = Ti.UI.createWindow({
	backgroundColor: "#fff",
	//layout: "horizontal"
});

//Border

var border = Ti.UI.createView({
	backgroundColor: "cecece",
	heght: 1,
	width: pWidth,
	top: 20
});

//View/ Scroll

var viewContainer = Ti.UI.createScrollView({
	//top: 0,
	layout: "horizontal",
	width: pWidth,
	contentWidth: pWidth,
	height: pHeight - border.height - border.top,
	showVerticalScrollIndicator: true,
	backgroundColor: "#33CCFF",
	
});

//Loop

for( i = 0; i < itemCount; i++){
	var view = Ti.UI.createView({
		backgroundColor: "orange",
		top: margin,
		left: margin,
		width: size,
		height: size
	});
	var text = Ti.UI.createLabel({
		text: i+1,
		color:"#fff"
	});
	
	view.add(text);
	viewContainer.add(view);
}

secWin.add(border);
secWin.add(viewContainer);
secWin.open();
