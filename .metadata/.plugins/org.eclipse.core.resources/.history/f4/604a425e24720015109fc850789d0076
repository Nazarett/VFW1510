//Practice for video week 3 
var win = Ti.UI.createWindow({
	backgroundColor: "#fff",
	layout:"vertical"
});

//var myPic = Ti.UI.createImageView({
	//image: "pics/scorpion.jpg",
	//width: "50%"
//});

//var myPic2 = Ti.UI.createImageView({
	//image: "pics/oreo.jpg",
	//width: "50%"
//});


var myPics = ["scorpion.jpg", "oreo.jpg"];

for(var i=0; i<myPics.length;i++){
	var thePic = Ti.UI.createImageView({
		image: "pics/" + myPics [i],
		width : "50%",
		top: 100,
		bottom: 20
	});
	win.add(thePic);
}

win.add(myPics);
win.open();
